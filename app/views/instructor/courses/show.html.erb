<br />
<div>
  <h1 class="text-center purple-text"><%= current_course.title %></h1>
  <br/>
    <div class="photo-container-large center-align">
      <%= image_tag current_course.image, class: 'img-fluid' %>
    </div>
</div>

<br/>

<div class="col-10 offset-2 course-info">
  <div class="row">

    <div class="col col-sm-4">
        <div>
          <%= link_to "Prevew as Student", course_path(current_course), class: 'btn btn-success' %>
        </div>
        <div>
          <%= link_to 'Add Section', new_instructor_course_section_path(current_course), class:"btn btn-success" %>
        </div>
    </div>
    <br/>

    <div class="col col-sm-8">
      <div class="purple-text">
        <ul class="section">
          <% current_course.sections.each do |section| %>
              <li class="section-title">
                <%= section.title %>
              <%= link_to " +New Lesson", new_instructor_section_lesson_path(section),class:"float-right" %>
                <div class="clear"></div>
                <ul class="lesson">
                  <% section.lessons.each do |lesson| %>
                    <li>
                      <b><%= lesson.title %></b>
                      -
                      <%= lesson.subtitle %>
                    </li>
                  <% end %>
                </ul>
              </li>
          <br/>
          <% end %>
        </ul>
      </div>
    </div>

  </div>
</div>
