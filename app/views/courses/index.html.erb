<br />

<div>
  <h1 class="text-center purple-text">Learn something today</h1>
  <hr />
  </div>

  <div class="row">
    <div class="col-6 offset-3">
      <% @courses.each do |course| %>
          <div class="list-group">
              <%= link_to course_path(course), class:"list-group-item list-group-item-action flex-column align-items-start" do %>
                      <div class="d-flex w-100 justify-content-between purple-text">
                            <h5 class="mb-1"><%= course.title %></h5>
                            <span class="badge badge-default"><%= number_to_currency course.cost %></span>
                      </div>
                      <br/>
                        <div class="photo-container mb-1">
                          <%= image_tag course.image, class:"img-fluid" %>
                        </div>
                        <br/>
                      <p class="mb-1 purple-text"><%= course.description %></p>
              <% end %>
          </div>
      <% end %>
    </div>
  </div>
